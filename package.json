{
  "name": "wallet",
  "version": "0.0.1",
  "description": "for test.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "private": "true",
  "scripts": {
    "dev": "node build/src/index.js",
    "dev:lint": "eslint --ext .js,.ts src/*",
    "dev:fix": "eslint  src/**/*.ts --fix",
    "test": "jest --ci --reporters=default --reporters=jest-junit --testResultsProcessor=jest-junit",
    "clean": "rimraf build/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "check-types": "tsc --noEmit",
    "start": "npm-run-all clean tsc && node build/src/index.js",
    "lint": "npm-run-all dev:lint check-types"
  },
  "author": "onesword0618 <ao.akua.leo@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "date-fns-timezone": "^0.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "babel-jest": "^27.5.1",
    "eslint": "^8.10.0",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.3.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "bash -c tsc --noEmit"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": ".",
    "outputName": "junit.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
